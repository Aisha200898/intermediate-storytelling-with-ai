    "version": "0.2.0",
    "configurations": [
        {
            "name": "Streamlit: Audio Recorder App",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "${workspaceFolder}/lesson-2.2/speech-to-text.py",
                "--server.port",
                "8501",
                "--server.enableCORS",
                "false",
                "--browser.serverAddress",
                "localhost"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Streamlit: Text to Speech App",
            "type": "debugpy",
            "request": "launch",
            "module": "streamlit",
            "args": [
                "run",
                "${workspaceFolder}/lesson-2.2/text-to-speech.py",
                "--server.port",
                "8501",
                "--server.enableCORS",
                "false",
                "--browser.serverAddress",
                "localhost"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}